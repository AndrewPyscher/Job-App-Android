<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapActivity">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:cameraZoom="12"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".MapActivity" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7" />

    <TextView
        android:id="@+id/tvJVTitleLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Title: "
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline" />

    <TextView
        android:id="@+id/tvJVTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        android:gravity="center_horizontal|left"
        android:text="Title Example"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvJVTitleLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvJVTitleLabel"
        app:layout_constraintTop_toTopOf="@+id/tvJVTitleLabel" />

    <TextView
        android:id="@+id/tvJVCompanyLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="company: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvJVTitleLabel" />

    <TextView
        android:id="@+id/tvJVCompany"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center_horizontal|left"
        android:text="company example"
        app:layout_constraintBottom_toBottomOf="@+id/tvJVCompanyLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvJVCompanyLabel"
        app:layout_constraintTop_toTopOf="@+id/tvJVCompanyLabel" />

    <TextView
        android:id="@+id/tvJVCoordinatesLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="coordinates: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvJVCompanyLabel" />

    <TextView
        android:id="@+id/tvJVCoordiantes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center_horizontal|left"
        android:text="coordinate example"
        app:layout_constraintBottom_toBottomOf="@+id/tvJVCoordinatesLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvJVCoordinatesLabel"
        app:layout_constraintTop_toTopOf="@+id/tvJVCoordinatesLabel"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tvJVSalaryLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="salary:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvJVCoordinatesLabel" />

    <TextView
        android:id="@+id/tvJVSalary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:gravity="center_horizontal|left"
        android:text="salary example"
        app:layout_constraintBottom_toBottomOf="@+id/tvJVSalaryLabel"
        app:layout_constraintStart_toEndOf="@+id/tvJVSalaryLabel"
        app:layout_constraintTop_toTopOf="@+id/tvJVSalaryLabel"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tvJVTypeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="type: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvJVSalaryLabel" />

    <TextView
        android:id="@+id/tvJVType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center_horizontal|left"
        android:text="type example"
        app:layout_constraintBottom_toBottomOf="@+id/tvJVTypeLabel"
        app:layout_constraintEnd_toStartOf="@+id/btnApply"
        app:layout_constraintStart_toEndOf="@+id/tvJVTypeLabel"
        app:layout_constraintTop_toTopOf="@+id/tvJVTypeLabel" />

    <TextView
        android:id="@+id/tvJVRatingLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Rating: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvJVTypeLabel" />

    <TextView
        android:id="@+id/tvJVRating"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center_horizontal|left"
        android:text="123"
        app:layout_constraintBottom_toBottomOf="@+id/tvJVRatingLabel"
        app:layout_constraintEnd_toStartOf="@+id/btnApply"
        app:layout_constraintStart_toEndOf="@+id/tvJVRatingLabel"
        app:layout_constraintTop_toTopOf="@+id/tvJVRatingLabel"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnApply"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="Apply"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvJVRating"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvJVSalary"
        app:layout_constraintTop_toTopOf="@+id/tvJVSalary" />

</androidx.constraintlayout.widget.ConstraintLayout>